{erl_opts, [debug_info]}.
{cover_enabled, true}.
{plugins, [
    {rebar3_codecov, "0.3.0"}
]}.
{project_plugins, [erlfmt]}.
{minimum_otp_vsn, "24.0"}.
{deps, [
    {telemetry, "1.1.0"},
    {parse_trans, "3.4.1"},
    {hackney, "~> 1.18.1"},
    {jsx, "~> 2.10.0"},
    {emqtt, "~> 1.2"},
    {opentelemetry_api, "~> 1.2.0"},
    {opentelemetry, "~> 1.2.0"},
    {opentelemetry_exporter, "~> 1.3.0"},
    {opentelemetry_process_propagator, "~> 0.1.1"},
    {opentelemetry_telemetry, "~> 1.0.0"},
    {qdate, "~> 0.7.0"}
]}.

{overrides, []}.

{shell, [
    % {config, "config/sys.config"},
    {apps, [hvac_iot]},
    {config, "sys.config"}
]}.

{erlydtl_opts, [
    {doc_root, "templates"}
]}.

{provider_hooks, [
    {post, [{ct, {codecov, analyze}}]},
    {post, [{eunit, {codecov, analyze}}]}
]}.

{relx, [
    {release, {hvac_iot_release, git}, [
        opentelemetry_exporter,
        {opentelemetry, permanent},
        hvac_iot,
        runtime_tools
    ]},
    {dev_mode, false},
    {include_erts, true},
    {extended_start_script, true},
    {sys_config_src, "config/sys.config.src"},
    {vm_args, "config/vm.args"}
]}.
